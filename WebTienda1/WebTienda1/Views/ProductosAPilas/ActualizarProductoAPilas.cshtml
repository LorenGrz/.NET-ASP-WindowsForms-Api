@using ProyectoCompartido;
@model ProyectoCompartido.ProductoAPilas;


<h1>Actualizar Producto a Pilas</h1>

<form asp-action="ActualizarProductoAPilas" asp-route-id="@Model.Id">
    <div class="form-group">
        <label for="Name">Nombre: </label>
        <input asp-for="Nombre" class="form-control"/>
    </div>

    <div class="form-group">
        <label for="Name">Precio: </label>
        <input asp-for="Precio" class="form-control"/>
    </div>

    <div class="form-group">
        <label for="Name">Cantidad: </label>
        <input asp-for="Cantidad" class="form-control"/>
    </div>

    <div class="form-group">
        <label for="Name">Descripcion: </label>
        <input asp-for="Descripcion" class="form-control"/>
    </div>

    <div class="form-group">
        <label for="Name">Cantidad de Pilas: </label>
        <input asp-for="CantPilas" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Tipo">Tipo de Pilas: </label>
        <select asp-for="Tipo" class="form-control" asp-items="Html.GetEnumSelectList<TipoPilas>()">
        </select>
    </div>

    <div class="form-group">
        <label for="Name">Proveedor: </label>
        <input asp-for="ProveedorID" class="form-control" />

    </div>

    <button type="submit" class="btn btn-warning">Guardar Cambios</button>
    <button asp-action="Index" class="btn btn-dark">Cancelar</button>
</form>