@*
    Index de Los Productos
*@
@model List<ProyectoCompartido.Producto>

    <h2>Lista de Productos</h2>
<br />
<a asp-action="AgregarProducto" class="btn btn-success">Agregar Producto</a>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Nombre</td>
                <td>@producto.Precio</td>
                <td>@producto.Cantidad</td>
                <td>
                    <a asp-action="Detalles" asp-route-id="@producto.Id" class="btn btn-primary">Detalle</a>
                    <a asp-action="ActualizarProducto" asp-route-id="@producto.Id" class="btn btn-warning">Actualizar</a>
                    <a asp-action="EliminarProducto" asp-route-id="@producto.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>