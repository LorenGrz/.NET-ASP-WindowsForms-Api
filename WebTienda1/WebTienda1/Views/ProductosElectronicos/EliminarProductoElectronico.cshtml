@model ProyectoCompartido.ProductoElectronico;

<h1>Confirmar Eliminacion</h1>

<div>
    <h5>Estas seguro que deseas eliminar el producto?</h5>
    <h6>Id: @Model.Id</h6>
    <h6>Nombre: @Model.Nombre</h6>
    <h6>Precio: @Model.Precio</h6>
    <h6>Cantidad: @Model.Cantidad</h6>
    <h6>Descripcion: @Model.Descripcion</h6>
    <h6>Voltaje: @Model.Voltaje</h6>
    <h6>Transformador: @Model.Transformador</h6>
    <h6>Proveedor: @Model.ProveedorID</h6>
</div>

<form asp-action="ConfirmarEliminacionProductoElectronico" method="post" asp-route-id="@Model.Id">
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <button asp-action="Index" class="btn btn-dark">Cancelar</button>
</form>