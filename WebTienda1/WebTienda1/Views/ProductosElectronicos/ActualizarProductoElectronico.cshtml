@model ProyectoCompartido.ProductoElectronico;


<h1>Actualizar Producto Electronico</h1>

<form asp-action="ActualizarProductoElectronico" asp-route-id="@Model.Id">
    <div class="form-group">
        <label for="Name">Nombre: </label>
        <input asp-for="Nombre" class="form-control"/>
    </div>

    <div class="form-group">
        <label for="Name">Precio: </label>
        <input asp-for="Precio" class="form-control"/>
    </div>

    <div class="form-group">
        <label for="Name">Cantidad: </label>
        <input asp-for="Cantidad" class="form-control"/>
    </div>

    <div class="form-group">
        <label for="Name">Descripcion: </label>
        <input asp-for="Descripcion" class="form-control"/>
    </div>

    <div class="form-group">
        <label for="Name">Voltaje: </label>
        <input asp-for="Voltaje" class="form-control" />
    </div>

    <div class="form-check">
        <input type="checkbox" asp-for="Transformador" class="form-check-input" id="Transformador" />
        <label class="form-check-label" for="Transformador">¿Tiene Transformador?</label>
    </div>

    <div class="form-group">
        <label for="Name">Proveedor: </label>
        <input asp-for="ProveedorID" class="form-control" />

    </div>

    <button type="submit" class="btn btn-warning">Guardar Cambios</button>
    <button asp-action="Index" class="btn btn-dark">Cancelar</button>
</form>