@model ProyectoCompartido.ProductoElectronico;


<h1>Agregar Nuevo Producto Electronico</h1>

<form asp-action="AgregarProductoElectronico">
    <div class="form-group">
        <label for="Name">Nombre: </label>
        <input asp-for="Nombre" class="form-control"/>
    </div>

    <div class="form-group">
        <label for="Name">Precio: </label>
        <input asp-for="Precio" class="form-control"/>
    </div>

    <div class="form-group">
        <label for="Name">Cantidad: </label>
        <input asp-for="Cantidad" class="form-control"/>
    </div>

    <div class="form-group">
        <label for="Name">Descripcion: </label>
        <input asp-for="Descripcion" class="form-control"/>
    </div>

    <div class="form-group">
        <label for="Name">Voltaje: </label>
        <input asp-for="Voltaje" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Name">Transformador: </label>
        <input type="checkbox" asp-for="Transformador" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Name">Proveedor: </label>
        <input asp-for="ProveedorID " class="form-control"/>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <button type= "submit" asp-action="Index" class="btn btn-success">Volver a la lista de productos electronicos</button>
</form>